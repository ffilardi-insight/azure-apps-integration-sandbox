{
    "name": "Azure Apps & Integration Sandbox",
    "image": "mcr.microsoft.com/devcontainers/python:dev-3.12-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/azure-cli:latest": {},
        "ghcr.io/azure/azure-dev/azd:latest": {},
        "ghcr.io/rchaganti/vsc-devcontainer-features/azurebicep:latest": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "esbenp.prettier-vscode",
                "GitHub.vscode-github-actions",
                "ms-azuretools.azure-dev",
                "ms-azuretools.vscode-azurefunctions",
                "ms-azuretools.vscode-bicep",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "GitHub.copilot"
            ]
        }
    },
    "forwardPorts": [
    ],
    "postCreateCommand": "bash .devcontainer/install-requirements.sh",
    "portsAttributes": {
        "8000": {
            "label": "Application",
            "onAutoForward": "notify"
        }
    },
    "remoteUser": "vscode",
    "hostRequirements": {
        "memory": "4gb"
    }
}
